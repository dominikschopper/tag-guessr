{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "moduleDetection": "auto",
    "module": "ES2020",
    "rootDir": "./src",
    "removeComments": true,
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
